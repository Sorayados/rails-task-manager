<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li><%= task.completed ? check_box_tag("", "", true) : check_box_tag("", "", false) %><%= link_to task.title, task_path(task) %> <%= link_to "Delete this task", destroy_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>
<div>
<%= link_to "Add a new task", tasks_new_path %>
</div>
